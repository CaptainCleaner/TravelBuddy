<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutswitcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sunny_bg" 
    >

    <LinearLayout
        android:id="@+id/wlayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/wframe1"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_gravity="top"
            android:layout_margin="5dip"
            android:background="@color/ourcream"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/currentWeatherImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_weight="1"
                android:src="@drawable/chance_of_rain" />

            <LinearLayout
                android:id="@+id/textlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/currentDay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:text="day"
                    android:textColor="@color/white"
                    android:textSize="35dip"
                    android:textStyle="bold"
                     >
                </TextView>

                <TextView
                    android:id="@+id/currentConditions"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:text="condition"
                    android:textColor="@color/white"
                    android:textSize="20dip"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/currentHigh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:text="high"
                    android:textColor="@color/white"
                    android:textSize="12dip"
                    android:textStyle="italic" >
                </TextView>

                <TextView
                    android:id="@+id/currentLow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_weight="1"
                    android:text="low"
                   android:textColor="@color/white"
                    android:textSize="12dip"
                    android:textStyle="italic" >
                </TextView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

